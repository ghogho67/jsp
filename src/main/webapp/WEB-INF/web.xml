<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>jsp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>ADMIN</param-name>
    <param-value>ghogho67</param-value>
  </context-param>
  <servlet>
    <servlet-name>basicServlet</servlet-name>
    <servlet-class>kr.or.ddit.servlet.BasicServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>basicServlet</servlet-name>
    <url-pattern>/bs</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>nowDate</servlet-name>
    <servlet-class>kr.or.ddit.servlet.NowDate</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>nowDate</servlet-name>
    <url-pattern>/nowDtae</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>TimesTablesServlet</servlet-name>
    <servlet-class>kr.or.ddit.servlet.TimesTablesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TimesTablesServlet</servlet-name>
    <url-pattern>/TimesTables</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LoginController</display-name>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>kr.or.ddit.login.controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/LoginController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LoginController2</display-name>
    <servlet-name>LoginController2</servlet-name>
    <servlet-class>kr.or.ddit.login.controller.LoginController2</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController2</servlet-name>
    <url-pattern>/LoginController2</url-pattern>
  </servlet-mapping>
  
  
  
  
  
  <!-- 에러설정 -->
  <error-page>
    <error-code>404</error-code>
    <location>/error/404/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error/500/500.html</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.NumberFormatException</exception-type>
    <location>/WEB-INF/error/numberfromatException.jsp</location>
  </error-page>
  
  
